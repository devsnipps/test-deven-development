  <h1>All Products</h1>

    <% @products.each do |product| %>
      <div style="">
        <%= image_tag "products/#{product.image_url}" %><br>
        <p><span class='product_title'><%= link_to product.name, product %></span><%= product.description %></p>
        
        <p>Stock: <%= product.stock %> &emsp;Price:<%= print_price(product.price) %></p>
        <p><%= button_to "Add to Cart", order_items_path(product_id: product) %></p>
        <br><br>
      </div>
    <% end %>
  

<%= link_to 'Create a new Product', new_product_path, id: 'new_product' %>
